class EndOfGame( BaseException ) :
    def __init__( self ) :
        BaseException.__init__( self )

class GamePaused( BaseException ) :
    def __init__( self ) :
        BaseException.__init__( self )

class RestartGame( BaseException ) :
    def __init__( self ) :
        BaseException.__init__( self )

class GameOver( BaseException ) :
    def __init__( self ) :
        BaseException.__init__( self )

class UnsplittableAsteroid( BaseException ) :
    def __init__( self ) :
        BaseException.__init__( self )
